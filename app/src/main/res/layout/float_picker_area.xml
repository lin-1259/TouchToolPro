<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:clipChildren="false">

    <FrameLayout
        android:id="@+id/areaBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_border">

        <ImageView
            android:id="@+id/areaLeft"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="24dp"
            app:srcCompat="@drawable/icon_drag_left"
            app:tint="?attr/colorPrimaryLight" />

        <ImageView
            android:id="@+id/areaTop"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="24dp"
            app:srcCompat="@drawable/icon_drag_top"
            app:tint="?attr/colorPrimaryLight" />

        <ImageView
            android:id="@+id/areaRight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="24dp"
            app:srcCompat="@drawable/icon_drag_right"
            app:tint="?attr/colorPrimaryLight" />

        <ImageView
            android:id="@+id/areaBottom"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="24dp"
            app:srcCompat="@drawable/icon_drag_bottom"
            app:tint="?attr/colorPrimaryLight" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="64dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            style="@style/Theme.TouchTool.IconButton.Filled"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_back" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            style="@style/Theme.TouchTool.IconButton.Filled"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_check" />

    </LinearLayout>

</FrameLayout>